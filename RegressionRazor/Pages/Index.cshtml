@page
@model IndexModel
@{
    ViewData["Title"] = "Regression Testing Dashboard";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Projects
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var project in Model.Projects)
                    {
                        <li class="list-group-item">
                            <a asp-page="/Project" asp-route-id="@project.Id" class="d-flex justify-content-between align-items-center">
                                @project.Name
                                <span class="badge bg-primary rounded-pill">@project.TestCases.Count</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                Add New Project
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="AddProject">
                    <div class="mb-3">
                        <label asp-for="NewProjectName" class="form-label">Project Name</label>
                        <input asp-for="NewProjectName" class="form-control" required>
                        <span asp-validation-for="NewProjectName" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Project</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="alert alert-info">Select a project and test case to view details.</div>
    </div>
</div>